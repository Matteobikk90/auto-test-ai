{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build", "^db:g"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": [
        "DATABASE_URL",
        "AUTH_GITHUB_ID",
        "AUTH_GITHUB_SECRET",
        "AUTH_GOOGLE_ID",
        "AUTH_GOOGLE_SECRET",
        "NEXTAUTH_SECRET",
        "PINATA_API_KEY",
        "PINATA_API_SECRET",
        "PINATA_API_JWT",
        "PINATA_GATEWAY"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "dependsOn": ["^db:g"],
      "cache": false,
      "persistent": true
    },
    "db:g": {
      "cache": false
    },
    "db:m": {
      "cache": false,
      "persistent": true
    },
    "db:d": {
      "cache": false
    }
  }
}
